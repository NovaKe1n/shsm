#!/usr/bin/env bash

#title|alive
#version|1.0
#author|0ero1ne
#info|scan host from in a local network from 1 to 255

printf "\n[*] Scanning local network...\n"

for ip in $(seq 255); do
  ping -c 1 -W 0.1 192.168.1.$ip &> /dev/null
  if [ $? -eq 0 ]; then 
    echo "[-] 192.168.1.$ip is alive"
  #else
  #  echo "192.168.1.$ip ..."
  fi
  sleep 0.2
done

printf "\n[*] End of job"
